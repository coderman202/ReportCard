<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ReportCardHeaderItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:background">@color/header_background_color</item>
        <item name="android:padding">@dimen/list_item_padding</item>
    </style>

    <style name="ReportCardSubHeaderItem" parent="ReportCardHeaderItem">
        <item name="android:textSize">@dimen/subheader_text_size</item>
        <item name="android:background">@color/subheader_background_color</item>
        <item name="android:textColor">@color/header_background_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ReportCardItem" parent="ReportCardSubHeaderItem">
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

</resources>
